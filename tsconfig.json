{
  "compilerOptions": {
    "target": "es2015",
    "module": "CommonJS",
    "jsx": "react",
    "rootDir": "src",
    "outDir": "build",
    "declaration": false,
    "removeComments": true,
    "noLib": false,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "esModuleInterop": false,
    "moduleResolution": "node"
  },
  "compileOnSave": true,
  "include": [
      "src/**/*"
  ]
}